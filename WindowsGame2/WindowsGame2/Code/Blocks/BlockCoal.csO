using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace RatingTDS.Code.Blocks
{
    public class BlockCoal : Block
    {
        public BlockCoal() : base()
        {
        }

        public override byte getItemDrop()
        {
            return (byte)3;
        }

        public override int getItemDropNum()
        {
            return 1 + Main.r.Next(0, 3);
        }
    }
}
